<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.2/dist/normalizr.browser.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Carrito</title>

</head>

<body>
    <div class="container mt-3">
        <h1 class="alert alert-success">
            Bienvenido, <%= name %> <img src=<%= photo %> alt="">
            <br>
            <%= email %>
                <button class="btn btn-warning float-right" onclick="location.href='/logout'">
                    Desloguear
                </button>
                <button class="btn btn-info float-right" onclick="location.href='/home'">
                  Home
              </button>
        </h1>
    </div>
    </div>
    <div class="container mt-3">
        <div class="jumbotron">
          <h1 style="color: blue">Vista de carrito</h1>
          <br />
          <% if (products.length==[]) { %>
          <div class="alert alert-warning" role="alert">
            No se encontraron productos
          </div>
          <br />
          <% } else { %>
          <div class="table-responsive">
            <table class="table table-dark">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Precio</th>
                  <th>Foto</th>
                </tr>
              </thead>
              <tbody>
                <% products.forEach(function(product) { %>
                <tr>
                  <td><%= product.title %></td>
                  <td><%= product.price %></td>
                  <td><img src=<%= product.tumbnail %> alt=""></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <button class="btn btn-primary float-right" onclick="buyProduct()">
                Comprar
            </button>
          </div>
  
          <% } %>
          <br />
        </div>
      </div>
    <script src="/index.js"></script>
</body>

</html>