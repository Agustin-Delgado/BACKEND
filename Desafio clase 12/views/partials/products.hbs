<h1 style="color:blue;">Vista de productos</h1>
<br>
{{#if isProductsEmpty}}
<div class="alert alert-warning" role="alert">
    No se encontraron productos
</div>
<br>
{{else}}
<div class="table-responsive">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td><img src="{{{tumbnail}}}" /></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{/if}}
<br>